<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.jhnbos.letsmeet">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Let's Meet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.LoginActivity" />
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="Let's Meet">
        </activity>

        <activity
            android:name=".CreateGroupActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>

        <activity
            android:name=".AddContactActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>

        <activity
            android:name=".ShowInfoActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>

        <activity
            android:name=".ShowContactActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>

        <activity
            android:name=".AddMemberActivity"
            android:label="Add Member">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>

        <activity
            android:name=".ShowMembersActivity"
            android:label="Members">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>

        <activity
            android:name=".Event"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.Week" />
        </activity>

        <activity
            android:name=".Week">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.jhnbos.letsmeet.MainActivity" />
        </activity>
    </application>

</manifest>